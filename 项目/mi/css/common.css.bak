@charset "utf-8";
body{
	font: 12px "microsoft yahei";
	color:#72747E;
	padding:0px;
	margin:0px;
}
ul,li,p,h1,h2,h3,h4,h5,h6,dl,dt,dd{
    margin:0px;
    padding:0px;
    border:none;
    list-style:none;
}
h2{
	float:left;
	color:#2E2C2D;
}
dd{
	width:234px;
	text-align:center;
	padding:5px 0;
}
dt{
	margin-bottom:25px;
}
a{
	color:#B0B0B0;
	text-decoration:none;
}
input {border:none;}
.lf   {float:left;}
.rt  {float:right;}
.clear  {clear:both;}
.price{color:#FF6700;}
.pdt_name{color:#111C0C;}
/**********************整体布局*****************/
#nav,#banner,#main_content,.foot_top,.foot_bottom_all{
	width:1226px;
	overflow:hidden;
	margin:0 auto;
}
.top_box{
	width:1226px;
	margin:0 auto;
	height:40px;
}
#main{
	width:100%;
	overflow:hidden;
	background-color:#F5F5F5;
	padding:50px 0;
}
#top{
	width:100%;
	height:40px;
	line-height:40px;
	background:#313131;
	border-bottom:1px solid #242424;	
}
#nav{
	height:60px;
	padding:20px 0;
	position:relative;
}
#footer{
	width:100%;
	min-height:100px;
	background-color:#fff;
}
/*********************页面底部**********************/
.foot_top .foot_title{
	height:85px;
}
.foot_top .foot_title .foot_serve li{
	float:left;
	width:245px;
	height:54px;
	line-height:25px;
	font-size:16px;
	text-align:center;
	margin:30px 0;
	border-bottom:1px solid #b0b0b0;
}
.foot_top .foot_title .foot_serve li a{
	color:#2e2c2d;
}
.foot_top .foot_title .foot_serve li b{
	float:right;
	width:1px;
	height:25px;
	border-right:1px solid #b0b0b0;
}
/******************帮助中心********************/
.foot_list{
	height:170px;
}
.foot_list .foot_list_help{
	width:163px;
	height:145px;
	text-align:left;
	float:left;
}
.foot_list .foot_list_help p{
	width:163px;
	font-size:15px;
	color:#2e2c2d;
	padding:10px 0;
}
.foot_list .foot_list_help ul li a{
	display:inline-block;
	padding:5px 0;
	color:#757575;
}
.foot_list .foot_list_help ul li a:hover{
	color:#FF6700;
}
/*****************右侧在线客服********************/
.foot_list .foot_list_phone{
	float:left;
	width:245px;
	height:109px;
	margin-top:15px;
	border-left:1px solid #b0b0b0;
	text-align:center;
}
.foot_list .foot_list_phone>div{
	font-size:18px;
	color:#FF6700;
	margin-bottom:5px;
}
.foot_list .foot_list_phone a{
	display:inline-block;
	width:118px;
	height:28px;
	line-height:28px;
	margin-top:10px;
	border:1px solid #FF6700;
	color:#FF6700;
}
.foot_list .foot_list_phone a:hover{
	color:#fff;
	background:#FF6700;
}
/**************页面最底部***************/
.foot_bottom{
	width:100%;
	height:120px;
	padding:25px 0;
	background:#fafafa;
}
.foot_bottom .foot_bottom_all .foot_bottom_ul{
	width:799px;
	margin-left:10px;
	margin-bottom:2px;
}
.foot_bottom .foot_bottom_all .foot_bottom_ul ul{
	height:20px;
}
.foot_bottom .foot_bottom_all .foot_bottom_ul li a{
	font-size:12px;
	color:#757575;
}
.foot_bottom .foot_bottom_all .foot_bottom_ul li a:hover{
	color:#FF6700;
}
.foot_bottom .foot_bottom_all p{
	color:#b0b0b0;
}
.foot_bottom .foot_bottom_all p a:hover{
	color:#FF6700;	
}
.foot_bottom .foot_bottom_ir{
	width:1226px;
	height:30px;
	line-height:30px;
	margin:30px auto;
	text-align:center;
	font-size:20px;
	font-family:"华文新魏";
	color:#bababa;
}


